OBJDIRS	+= parser

PARSERSRC	:= Analysis.cc embedmysql.cc \
		   CryptoHandlers.cc cdb_rewrite.cc 
PARSERPROGS	:= cdb_test analyze load-schema print-back

PARSERPROGOBJS	:= $(patsubst %,$(OBJDIR)/parser/%,$(PARSERPROGS))

all:	$(PARSERPROGOBJS) $(OBJDIR)/libedbparser.so

$(PARSERPROGOBJS): %: %.o $(OBJDIR)/libedbparser.so  $(OBJDIR)/libedbutil.so
	$(CXX) $< -o $@ -ledbparser  $(LDFLAGS) -ledbutil -lcryptdb

EDBPARSER_OBJS	:= $(patsubst %.cc,$(OBJDIR)/parser/%.o,$(PARSERSRC))
$(OBJDIR)/libedbparser.so: $(EDBPARSER_OBJS) $(OBJDIR)/libedbutil.so $(OBJDIR)/libedbcrypto.so $(OBJDIR)/libedbcrypto2.so
	$(CXX) -shared -o $@ $(EDBPARSER_OBJS) $(LDFLAGS) -ledbutil -ledbcrypto -ledbcrypto2

