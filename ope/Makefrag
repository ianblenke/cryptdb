OBJDIRS     += ope
OPESRC  := bstnode.cc bstree.cc avlnode.cc avltree.cc


all:    $(OBJDIR)/libope.so $(OBJDIR)/libcryptdb.so
$(OBJDIR)/libope.so: $(patsubst %.cc,$(OBJDIR)/ope/%.o,$(OPESRC))
	$(CXX) -shared -o $@ $^ $(LDFLAGS)


all:	$(OBJDIR)/ope/ope_client
$(OBJDIR)/ope/ope_client: $(OBJDIR)/ope/ope_client.o $(OBJDIR)/libcryptdb.so $(OBJDIR)/libedbutil.so $(OBJDIR)/libope.so
	$(CXX) $< -o $@ $(LDFLAGS) -ledbutil -lope -lcryptdb

	
all:	$(OBJDIR)/ope/avltest
$(OBJDIR)/ope/avltest: $(OBJDIR)/ope/avltest.o $(OBJDIR)/libcryptdb.so $(OBJDIR)/libedbutil.so $(OBJDIR)/libope.so
	$(CXX) $< -o $@ $(LDFLAGS) -ledbutil -lope -lcryptdb

all:	$(OBJDIR)/ope/ope_server
$(OBJDIR)/ope/ope_server: $(OBJDIR)/ope/ope_server.o $(OBJDIR)/libcryptdb.so $(OBJDIR)/libedbutil.so $(OBJDIR)/libope.so
	$(CXX) $< -o $@ $(LDFLAGS) -ledbutil -lope -lcryptdb

all:	$(OBJDIR)/ope/exampleserver
$(OBJDIR)/ope/exampleserver: $(OBJDIR)/ope/exampleserver.o $(OBJDIR)/libcryptdb.so $(OBJDIR)/libedbutil.so $(OBJDIR)/libope.so
	$(CXX) $< -o $@ $(LDFLAGS) -ledbutil -lope -lcryptdb


install: install_opsserver

.PHONY: install_opsserver
install_opsserver: $(OBJDIR)/ope/exampleserver \
		   $(OBJDIR)/ope/ope_client
	install -m 555 -g mysql -o mysql $(OBJDIR)/ope/exampleserver $(MYSQL_PLUGIN_DIR); \
	install -m 555 -g mysql -o mysql $(OBJDIR)/ope/ope_server $(MYSQL_PLUGIN_DIR); 

			
